<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corners_bg15"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
        <TextView
            android:id="@+id/custom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="19dp"
            android:gravity="center"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fontColorGeneric"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/widget_dialog_divide_line"
            />
        <RelativeLayout
            android:id="@+id/custom_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:visibility="gone"
                android:id="@+id/custom_dialog_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/fontColorPrimary"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/custom_dialog_btn_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <cn.gmuni.sc.widget.CustomButton
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/custom_dialog_cancel_btn"
                    android:layout_width="100dp"
                    app:radius="15dp"
                    android:layout_height="30dp"
                    android:textColor="@color/fontColorWhite"
                    android:textSize="@dimen/font_large"
                    android:text="@string/cancel"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <cn.gmuni.sc.widget.CustomButton
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/custom_dialog_ok_btn"
                    android:layout_width="100dp"
                    app:radius="15dp"
                    android:layout_height="30dp"
                    android:textColor="@color/fontColorWhite"
                    android:textSize="@dimen/font_large"
                    android:text="@string/ok"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/custom_dialog_single_btn_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:visibility="gone">
            <cn.gmuni.sc.widget.CustomButton
                android:id="@+id/custom_dialog_single_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="37dp"
                app:radius="15dp"
                app:type="primary"
                android:textColor="@color/fontColorWhite"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


