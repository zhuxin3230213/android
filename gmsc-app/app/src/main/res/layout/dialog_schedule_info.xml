<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/schedule_info_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="课程名"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal"
        android:textColor="@color/fontColorNormal"
        android:textSize="16sp" />

    <View
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimaryBackground">

    </View>

    <TextView
        android:id="@+id/schedule_info_dialog_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fontColorPrimary"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="17dp"
        android:textSize="14dp"
        android:text="教室：501"/>
    <TextView
        android:id="@+id/schedule_info_dialog_weekIdx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fontColorPrimary"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="17dp"
        android:textSize="14dp"
        android:text="周数：1-21周"/>
    <TextView
        android:id="@+id/schedule_info_dialog_nc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fontColorPrimary"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="17dp"
        android:textSize="14dp"
        android:text="节数：第3-4节"/>
        <TextView
            android:id="@+id/schedule_info_dialog_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontColorPrimary"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="25dp"
            android:textSize="14dp"
            android:text="教师：任我行"/>

</LinearLayout>
