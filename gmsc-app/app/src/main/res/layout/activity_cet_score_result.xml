<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".module.score.CetScoreResultActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.gmuni.sc.widget.CustomToolbar
            android:id="@+id/score_cet_result_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/score_computer_query"></cn.gmuni.sc.widget.CustomToolbar>
    </android.support.design.widget.AppBarLayout>



    <cn.gmuni.sc.widget.CustomConstraintLayout
        android:tag="loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:background="@color/colorPrimaryBackground"
            android:gravity="center"
            android:id="@+id/score_result_title">
            <TextView
                android:id="@+id/score_result_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/fontColorMinor"
                android:textSize="@dimen/font_small"
                android:text="@string/score_result_info"/>
        </RelativeLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/score_result_title"
            android:background="@color/colorNormalBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_examinee_name"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_examinee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:weightSum="15">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_school_info"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_school_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_exam_type_info"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_exam_type_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>

            <!--笔试成绩-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/score_write"
                    android:textColor="@color/fontColorWhite"
                    android:textSize="@dimen/font_normal"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_examination_card_num_str"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_examination_write_card_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_write_score"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_write_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_listening_score"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_listening_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_reading_score"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_reading_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_writing_score"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_writing_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <!--口试成绩-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/score_oral"
                    android:textColor="@color/fontColorWhite"
                    android:textSize="@dimen/font_normal"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_examination_card_num_str"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_examination_oral_card_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal" android:weightSum="15">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_query_grade"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fontColorPrimary"
                    android:layout_weight="7"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/score_query_oral_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontColorGeneric"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="8"/>
            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/score_divider_line"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="@dimen/font_small"
                android:textColor="@color/fontColorMinor"
                android:textAlignment="center"
                android:text="@string/score_warning_info"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </cn.gmuni.sc.widget.CustomConstraintLayout>

</android.support.design.widget.CoordinatorLayout>