<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNormalBackground"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/module_gprs_item_top_divider_line"
            android:layout_width="1dp"
            android:layout_height="7dp"
            android:layout_marginLeft="14dp"
            android:background="@color/gprs_circular_round_bg" />

        <TextView
            android:id="@+id/gprs_circular_roundad"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@+id/module_gprs_item_top_divider_line"
            android:layout_marginLeft="11.6dp"
            android:background="@drawable/gprs_circular_roundad" />

        <View
            android:id="@+id/module_gprs_item_divider_line"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_below="@+id/gprs_circular_roundad"
            android:layout_marginLeft="14dp"
            android:background="@color/gprs_circular_round_bg" />

        <TextView
            android:id="@+id/gpr_gprsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gprs_circular_roundad"
            android:text="签到时间 16:03:01"
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:id="@+id/gpr_gprs_weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gpr_gprsTime"
            android:layout_below="@+id/gpr_gprsTime"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/gprs_gprsAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gpr_gprsTime"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/gpr_gprs_weizhi"
            android:text="陕西服装工程学院"
            android:textColor="@color/fontColorMinor"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

</LinearLayout>
