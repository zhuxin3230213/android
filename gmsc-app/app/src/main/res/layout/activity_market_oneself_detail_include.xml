<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/market_oneself_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNormalBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/market_oneself_detail_layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.gmuni.sc.widget.CircleImageView
                android:id="@+id/market_oneself_detail_user_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/default_avatar" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/market_oneself_detail_nick_name_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/market_oneself_detail_nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:minLines="1"
                            android:text="齐德龙"
                            android:textColor="@color/fontColorPrimary"
                            android:textSize="@dimen/font_big" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/market_oneself_detail_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-01-09 10:03"
                            android:textColor="@color/fontColorMinor"
                            android:textScaleX="0.6"
                            android:textSize="@dimen/font_normal" />

                        <TextView
                            android:id="@+id/market_oneself_detail_campus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="陕西服装工程学院"
                            android:textColor="@color/fontColorMinor"
                            android:textSize="@dimen/font_normal" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_detail_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_layout_user"
            android:orientation="horizontal">

            <View
                style="@style/AppTheme.Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryBackground" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_divider"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <cn.gmuni.sc.widget.CustomImageView
                android:id="@+id/market_oneself_detail_images"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/icon_news" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_detail_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_image"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/market_oneself_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥69"
                android:textColor="@color/pepper_red"
                android:textSize="@dimen/font_huge" />

            <TextView
                android:id="@+id/market_oneself_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:text="1111111111111111111111111111111111111111111111aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_detail_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_t"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                style="@style/AppTheme.Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryBackground" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_detail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_div"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/market_desc"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/market_oneself_detail_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="11111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
                android:textColor="@color/fontColorMinor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_oneself_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_detail_des">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_message"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/marke_oneself_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="11"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/font_normal"
                android:visibility="invisible" />
        </LinearLayout>

        <cn.gmuni.sc.widget.recyclerview.CustomRefreshRecycleView
            android:id="@+id/market_other_oneself_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_oneself_message"
            android:layout_marginTop="10dp">

        </cn.gmuni.sc.widget.recyclerview.CustomRefreshRecycleView>

        <cn.gmuni.sc.widget.CustomEmptyDataView
            android:id="@+id/market_oneself_message_no_data_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/market_oneself_message"
            android:visibility="gone"
            app:empty_image="@drawable/icon_404"
            app:empty_text="@string/market_message_empty">

        </cn.gmuni.sc.widget.CustomEmptyDataView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <View
                style="@style/AppTheme.Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryBackground" />

            <LinearLayout
                android:id="@+id/market_operation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/market_message"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_message"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/market_editor"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_editor"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/market_delete"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_delete"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/market_remark_sale"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_remark_sale"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/market_message_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cn.gmuni.sc.widget.ContainsEmojiEditText
                        android:id="@+id/market_message_edit"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:drawablePadding="20dp"
                        android:hint="@string/market_message_tip"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/fontColorPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/market_message_send"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="留言"
                        android:textColor="@color/fontColorPrimary"
                        android:textSize="@dimen/font_normal" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
