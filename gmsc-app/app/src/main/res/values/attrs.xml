<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--通用属性-->
    <attr name="title" format="string"></attr>

    <declare-styleable name="ImageTextButton">
        <attr name="img_src" format="reference"></attr>
        <!--引用通用属性-->
        <attr name="title"></attr>
    </declare-styleable>
    <!--自定义工具栏-->
    <declare-styleable name="CustomToolbar">
        <!--标题-->
        <attr name="title"></attr>
        <!--右侧操作按钮图标-->
        <attr name="action_icon" format="reference"></attr>
        <!--右侧可显示的文字-->
        <attr name="action_title" format="string"></attr>

        <!--是否可返回-->
        <attr name="enable_back" format="boolean"></attr>

        <!--返回文字-->
        <attr name="back_title" format="string"></attr>

        <!--返回图标-->
        <attr name="back_icon" format="reference"></attr>
    </declare-styleable>
    <!--自定义EditText-->
    <declare-styleable name="CustomEditText">
        <!--前缀-->
        <attr name="prefix_text" format="string"></attr>
        <!--是否固定前缀，默认是-->
        <attr name="fix_prefix_width" format="boolean"></attr>
        <!--指定前缀宽度，默认为60dp-->
        <attr name="prefix_width" format="dimension"></attr>
        <!--指定前缀颜色-->
        <attr name="prefix_color" format="color"></attr>
    </declare-styleable>

    <!--自定义按钮-->
    <declare-styleable name="CustomButton">
        <!--按钮类型，如primary/warning/ghost/default等-->
        <attr name="type" format="string"></attr>
        <!--按钮尺寸 large/small-->
        <attr name="size" format="string"></attr>
        <!--按钮圆角大小-->
        <attr name="radius" format="dimension"></attr>

        <!--按钮边框按钮-->
        <attr name="stroke_width" format="dimension"></attr>

        <!--边框颜色-->
        <attr name="stroke_color" format="color"></attr>

        <attr name="custom_padding_top" format="dimension"></attr>
        <attr name="custom_padding_left" format="dimension"></attr>
        <attr name="custom_padding_bottom" format="dimension"></attr>
        <attr name="custom_padding_right" format="dimension"></attr>
    </declare-styleable>
    
    <!--自定义的带边框的文本组件-->
    <declare-styleable name="BorderedTextView">
        <!--显示与否-->
        <attr name="show_left" format="boolean"></attr>
        <attr name="show_right" format="boolean"></attr>
        <attr name="show_top" format="boolean"></attr>
        <attr name="show_bottom" format="boolean"></attr>
        <!--边框宽度-->
        <attr name="left_width" format="integer"></attr>
        <attr name="right_width" format="integer"></attr>
        <attr name="top_width" format="integer"></attr>
        <attr name="bottom_width" format="integer"></attr>
        <!--边框颜色-->
        <attr name="left_color" format="string"></attr>
        <attr name="right_color" format="string"></attr>
        <attr name="top_color" format="string"></attr>
        <attr name="bottom_color" format="string"></attr>
        <!--边框类型-->
        <attr name="left_type" format="string"></attr>
        <attr name="right_type" format="string"></attr>
        <attr name="top_type" format="string"></attr>
        <attr name="bottom_type" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="url" format="string"></attr>
        <attr name="placeholder" format="reference"></attr>
        <attr name="show_placeholder" format="boolean"></attr>
        <attr name="error_placeholder" format="boolean"></attr>
        <attr name="use_cache" format="boolean"></attr>
        <!--是否预加载-->
        <attr name="preload" format="boolean"></attr>
    </declare-styleable>

    <!--自定义listview下拉刷新与上拉加载更多组件-->
    <declare-styleable name="CustomRefreshListView">
        <!--头部布局的高度-->
        <attr name="headerViewHeight" format="integer"></attr>
        <!--底部布局的高度-->
        <attr name="footerViewHeight" format="integer"></attr>
        <!--屏幕显示在第一个的item的索引-->
        <attr name="firstVisibleItemPosition" format="integer"></attr>
        <!--是否滑动到底部-->
        <attr name="isScrollToBottom" format="boolean"></attr>
        <!--按下时的Y坐标-->
        <attr name="downY" format="integer"></attr>
        <!--状态-->
        <attr name="PULL_REFRESH" format="integer"></attr>
        <attr name="RELEASE_REFRESH" format="integer"></attr>
        <attr name="REFRESHING" format="integer"></attr>
        <attr name="currentState" format="boolean"></attr>
        <!--当前是否在加载数据-->
        <attr name="isLoadingMore" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="IndexBar">
        <attr name="indexTextSize" format="dimension" />
        <attr name="indexTextColor" format="color" />
    </declare-styleable>

    <!--空数据组件-->
    <declare-styleable name="CustomEmptyDataView">
        <attr name="empty_text" format="string"></attr>
        <attr name="empty_image" format="reference"></attr>
    </declare-styleable>
</resources>